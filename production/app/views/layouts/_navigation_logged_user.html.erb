<div class="shadow-sm bg-white mb-3 d-print-none">
    <div class="container p-3">
        
        <!-- Menu responsive -->
        <div class="d-lg-none d-flex justify-content-between align-items-center">

            <%= render 'layouts/logo', width: 180, height: nil %>

            <div>
                <button
                    class="btn btn-primary py-1 px-3"
                    type="button"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasRight"
                    aria-controls="offcanvasRight">
                    <i class="bi bi-list"></i>
                    <% t("menu.menu") %>
                </button>
            </div>
        </div>
        
        <!-- Menu desktop -->
        <div class="d-none d-lg-flex justify-content-end align-items-center">
            <% if policy(User).show_notifications_bell? %>
                <div class="me-3">
                    <a href="<%= notifications_path %>" class="text-decoration-none d-flex">
                        <i class="bi bi-bell text-dark fs-5"></i>
                        <div class="custom-menu-number-notification notifications-icon-number">
                            <%= Notification.getting_current_unread(@current_user) %>
                        </div>
                    </a>
                </div>
            <% end %>

            <div class="dropdown" id="dropdownTopMenuUser">
                <button class="btn p-0 border-0 shadow-none d-inline-flex align-items-center dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="d-flex align-items-center">
                        <figure class="mb-0">
                            <%= image_tag @current_user.get_profile_image, class: 'img-fluid d-block rounded-circle', style: 'width: 50px; height: 50px;' %>
                        </figure>
                    </div>
                </button>
                <ul class="dropdown-menu">
                    <% if policy(@current_user).change_data? %>
                        <li>
                            <a class="dropdown-item" href="<%= change_data_path(id: @current_user.id) %>">
                                <i class="bi bi-person-badge"></i>
                                <span class="fs-14 ps-1">
                                    <%= User.human_attribute_name(:my_data) %>
                                </span>
                            </a>
                        </li>
                    <% end %>

                    <% if policy(SystemConfiguration).edit? %>
                        <li>
                            <a class="dropdown-item" href="<%= edit_system_configuration_path(1) %>">
                                <i class="bi bi-gear"></i>
                                <span class="fs-14 ps-1">
                                    <%= SystemConfiguration.model_name.human(count: 2) %>
                                </span>
                            </a>
                        </li>
                    <% end %>

                    <% if policy(SiteContact).new? %>
                        <li>
                            <a class="dropdown-item" href="<%= visitors_new_site_contact_path %>">
                                <i class="bi bi-headset"></i>
                                <span class="fs-14 ps-1">
                                    <%= SiteContact.model_name.human %>
                                </span>
                            </a>
                        </li>
                    <% end %>

                    <li>
                        <a class="dropdown-item" href="<%= logout_path %>">
                            <i class="bi bi-box-arrow-left"></i>
                            <span class="fs-14 ps-1">
                                <%= t("menu.logout") %>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>

        </div>

    </div>
</div>

<%= render 'layouts/side_menu' %>

