<div class="modal fade order-service-proposal-modal" id="confirmSubmitModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('model.confirm_action') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <p id="confirmSubmitText">
            <%= OrderServiceProposal.human_attribute_name(:confirm_save_and_submit) %>
        </p>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
          <%= t('model.cancel') %>
        </button>
        <button type="button" class="btn btn-primary" id="btn-confirm-submit">
          <%= OrderServiceProposal.human_attribute_name(:save_and_submit) %>
        </button>
      </div>
    </div>
  </div>
</div>
