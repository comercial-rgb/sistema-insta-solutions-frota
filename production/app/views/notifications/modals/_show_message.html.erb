<!-- Modal -->
<div class="modal fade" id="show_message_<%=notification.id%>" tabindex="-1">

    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <!-- Cabeçalho -->
            <div class="modal-header">

                <!-- Título -->
                <h5 class="modal-title" id="show_message_label_<%=notification.id%>">
                    <small class="text-muted"><%= notification.title.upcase %></small>
                </h5>

                <!-- Botão fechar -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Conteúdo -->
            <div class="modal-body px-4 pb-4 pt-3 text-start">
                <div class="row">
                    <div class="col-12">
                        <small>
                            <i><%= CustomHelper.get_text_date(notification.created_at, "datetime", :full) %></i>
                        </small>
                    </div>
                    <div class="col-12 mt-2">
                        <%= notification.message.html_safe %>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

