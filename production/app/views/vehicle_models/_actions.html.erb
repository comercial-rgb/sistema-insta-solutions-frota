<%= link_to manage_prices_vehicle_model_path(record), class: 'btn btn-sm btn-primary', title: 'Gerenciar Preços' do %>
  <i class="bi bi-currency-dollar"></i> Preços
<% end %>

<% if policy(record).edit? %>
  <%= link_to edit_vehicle_model_path(record), class: 'btn btn-sm btn-warning', title: 'Editar' do %>
    <i class="bi bi-pencil"></i>
  <% end %>
<% end %>

<% if policy(record).destroy? %>
  <%= link_to vehicle_model_path(record), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-sm btn-danger', title: 'Excluir' do %>
    <i class="bi bi-trash"></i>
  <% end %>
<% end %>
