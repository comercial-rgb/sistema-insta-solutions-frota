<!-- Modal -->
<div class="modal fade" id="cancel_order_service_<%=order_service.id%>" tabindex="-1">

    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">

            <!-- Cabeçalho -->
            <div class="modal-header">

                <!-- Título -->
                <h5 class="modal-title" id="cancel_order_service_label_<%=order_service.id%>">
                    <small class="text-muted"><%= order_service.code %></small>
                </h5>

                <!-- Botão fechar -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <%= form_tag cancel_order_service_path(id: order_service.id), method: :post, class: 'form-order-service-to-validate' do |f| %>
                        <div class="mb-3">
                            <label class="form-label"><%= OrderService.human_attribute_name(:cancel_justification) %></label>
                            <%= text_area_tag :cancel_justification, '', class: 'form-control', id: 'cancel_justification_'+order_service.id.to_s, autofocus: true, autocomplete: 'off' %>
                        </div>
                        <div class="mt-3 text-end">
                            <button class="btn btn-primary btn-sm" type="submit" data-confirm="<%= t('model.confirm_action') %>"><%= t('model.send') %></button>
                        </div>
                <% end %>
            </div>

        </div>
    </div>
</div>
