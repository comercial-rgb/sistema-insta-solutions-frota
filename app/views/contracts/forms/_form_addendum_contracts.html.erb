<div class="row">
   
    <div class="col-12 mb-3">
        <h5 class="mt-4"><%= AddendumContract.model_name.human(count: 2) %></h5>
    </div>

    <div class="col-12 multi-addendumcontract-block">
        <!-- Contador -->
        <input type="hidden" value="<%= f.object.addendum_contracts.length.to_s %>" class="multi-addendumcontract-cont" disabled>
        <%= f.fields_for :addendum_contracts do |addendum_contract| %>
            <div class="row multi-addendumcontract align-items-end">
                <%= render "contracts/forms/addendum_contract_fields", f: f, addendum_contract: addendum_contract %>
                <%= render 'common_pages/delete_multiple_relation', remove_path: delete_addendum_contract_path(model_id: addendum_contract.object.id), object: addendum_contract.object, object_text: 'addendumcontract'  %>
            </div>
        <% end %>
    </div>

    <!-- BotÃ£o de adicionar -->
    <div class="col-12">
        <%= render 'common_pages/add_multiple_relation', object_text: 'addendumcontract' %>
    </div>
</div>

