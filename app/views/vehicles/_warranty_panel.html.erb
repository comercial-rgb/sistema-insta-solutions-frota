<div class="card shadow-sm mt-4 mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="fw-bold"><i class="bi bi-shield-check me-2"></i>Peças e serviços em garantia deste veículo</span>
    <span class="text-muted small">Mostrando até 15 registros mais recentes</span>
  </div>
  <div class="card-body p-0">
    <% if warranty_items.blank? %>
      <p class="text-muted px-3 py-3 mb-0">Nenhum item em garantia para este veículo.</p>
    <% else %>
      <div class="table-responsive">
        <table class="table table-sm table-hover align-middle mb-0" style="border-collapse: separate; border-spacing: 0;">
          <thead>
            <tr style="background-color: #f8f9fa;">
              <th class="fw-bold py-2 px-3" style="border-bottom: 2px solid #dee2e6;">Tipo</th>
              <th class="fw-bold py-2 px-3" style="border-bottom: 2px solid #dee2e6;">Peça/Serviço</th>
              <th class="fw-bold py-2 px-3" style="border-bottom: 2px solid #dee2e6;">Marca</th>
              <th class="fw-bold py-2 px-3" style="border-bottom: 2px solid #dee2e6;">Código</th>
              <th class="fw-bold py-2 px-3" style="border-bottom: 2px solid #dee2e6;">Valor</th>
              <th class="fw-bold py-2 px-3" style="border-bottom: 2px solid #dee2e6;">Garantia restante</th>
              <th class="fw-bold py-2 px-3" style="border-bottom: 2px solid #dee2e6;">Fornecedor</th>
              <th class="fw-bold py-2 px-3" style="border-bottom: 2px solid #dee2e6;">N° OS</th>
            </tr>
          </thead>
          <tbody>
            <% warranty_items.each_with_index do |item, index| %>
              <tr style="<%= index.even? ? 'background-color: #ffffff;' : 'background-color: #f8f9fa;' %>">
                <td class="py-2 px-3" style="border-bottom: 1px solid #e9ecef;">
                  <% if item[:is_part] %>
                    <span class="badge bg-primary">Peça</span>
                  <% else %>
                    <span class="badge bg-info">Serviço</span>
                  <% end %>
                </td>
                <td class="py-2 px-3" style="border-bottom: 1px solid #e9ecef;"><%= item[:name] || '-' %></td>
                <td class="py-2 px-3" style="border-bottom: 1px solid #e9ecef;"><%= item[:brand].presence || '-' %></td>
                <td class="py-2 px-3" style="border-bottom: 1px solid #e9ecef;"><%= item[:code].presence || '-' %></td>
                <td class="py-2 px-3" style="border-bottom: 1px solid #e9ecef;"><%= CustomHelper.to_currency(item[:value].to_f) %></td>
                <td class="py-2 px-3" style="border-bottom: 1px solid #e9ecef;">
                  <% expires_text = l(item[:expires_at], format: :short) rescue item[:expires_at].to_s %>
                  <% if item[:remaining_days] <= 7 %>
                    <span class="fw-semibold text-danger"><%= item[:remaining_days] %> dias</span>
                  <% elsif item[:remaining_days] <= 30 %>
                    <span class="fw-semibold text-warning"><%= item[:remaining_days] %> dias</span>
                  <% else %>
                    <span class="fw-semibold text-success"><%= item[:remaining_days] %> dias</span>
                  <% end %>
                  <small class="text-muted d-block">(expira em <%= expires_text %>)</small>
                </td>
                <td class="py-2 px-3" style="border-bottom: 1px solid #e9ecef;"><%= item[:provider_name].presence || '-' %></td>
                <td class="py-2 px-3" style="border-bottom: 1px solid #e9ecef;">
                  <% if item[:order_service_id].present? %>
                    <%= link_to(item[:order_service_code].presence || item[:order_service_id], edit_order_service_path(item[:order_service_id]), class: 'text-decoration-none') %>
                  <% else %>
                    -
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
