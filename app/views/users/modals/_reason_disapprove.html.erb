<!-- Modal -->
<div class="modal fade" id="reason_disapprove_modal" tabindex="-1">

    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <!-- Cabeçalho -->
            <div class="modal-header">

                <!-- Título -->
                <h5 class="modal-title" id="reason_disapprove_modal">
                    <small class="text-muted"><%= User.human_attribute_name(:reason_disapprove) %></small>
                </h5>

                <!-- Botão fechar -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Conteúdo -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 text-center py-2">
                        <%= text_area_tag 'reason-disapprove', nil, rows: 6, cols: 40, placeholder: User.human_attribute_name(:reason_disapprove) %>
                    </div>
                    <div class="col-12 text-center py-1">
                        <button class="btn btn-sm btn-primary pointer text-white mt-2" type="button" id="send-disapprove-reason">
                            <%= t("model.send") %>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

