	<!-- ID do perfil de usuÃ¡rio -->
	<%= f.input :profile_id, as: :hidden, input_html: {value: @user.profile_id} %>

	<%= render 'users/forms/personal_data', f: f %>

	<%= render 'users/forms/client_form', f: f %>

	<%= render 'common_pages/addresses/address', relation: :address, f: f %>
	
	<%= render 'common_pages/person_contacts/person_contacts', f: f %>

