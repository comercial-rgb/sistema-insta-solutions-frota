        </div>

        <!-- Total order discount -->
        <div class="col-3">
            <label for="totalOrderDiscount" class="form-label"><%= OrderServiceProposal.human_attribute_name(:total_order_discount) %></label>
            <input type="text" class="form-control" id="totalOrderDiscount" value="R$ 0,00" disabled>
        </div>

        <!-- Total order discount percentage -->
        <div class="col-3">
            <label for="percentTotalOrderDiscount" class="form-label"><%= OrderServiceProposal.human_attribute_name(:percent_total_order_discount) %> </label>
            <input type="text" class="form-control" id="percentTotalOrderDiscount" value="<%= CustomHelper.to_percentage(client.discount_percent, 2) %>" disabled>
