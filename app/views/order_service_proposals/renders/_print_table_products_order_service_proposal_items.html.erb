<div class="row p-3 d-print-block mt-5">
    <div class="col-12 border border-1 border-opacity-25 border-dark rounded-4 p-3">
        <%= OrderServiceProposal.human_attribute_name(:services_products) %>
        <div>
            <% @total_value = 0 %>
            <div class="row">
                <div class="col-12 col-md-6 ">
                    <h3 class="text-center fs-12px"><%= Service.human_attribute_name(:parts) %></h3>
                    <%= render 'order_service_proposals/renders/table_data', order_service_proposal_items: order_service_proposal.order_service_proposal_items.select{|item| item.get_category_id == Category::SERVICOS_PECAS_ID}, label_column: Service.human_attribute_name(:part) %>
                </div>
                <div class="col-12 col-md-6 ">
                    <h3 class="text-center fs-12px"><%= Service.human_attribute_name(:services) %></h3>
                    <%= render 'order_service_proposals/renders/table_data', order_service_proposal_items: order_service_proposal.order_service_proposal_items.select{|item| item.get_category_id == Category::SERVICOS_SERVICOS_ID}, label_column: Service.human_attribute_name(:service) %>
                </div>
            </div>
        </div>
    </div>
</div>