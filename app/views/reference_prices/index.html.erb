<div class="container-fluid">
  <div class="row mb-3">
    <div class="col-12">
      <h2><i class="bi bi-currency-dollar"></i> Preços de Referência (Cilia)</h2>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-12">
      <%= link_to new_reference_price_path, class: 'btn btn-primary' do %>
        <i class="bi bi-plus-circle"></i> Novo Preço
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= datagrid_form_for @grid, url: reference_prices_path, method: :get %>
      <%= datagrid_table(@grid, class: 'table table-striped table-hover') %>
      <%= paginate @grid.assets, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>
