<div class="row">

    <!-- Título -->
    <div class="col-12">
        <h5 class="mt-4"><%= Email.model_name.human(count: 2) %>:</h5>
    </div>

    <!-- Campos multiplos dinamicos (emails) -->
    <div class="col-12 multi-email-block">

        <!-- Contador -->
        <input type="hidden" value="<%= f.object.emails.length.to_s %>" class="multi-email-cont" disabled>

        <%= f.fields_for :emails do |email| %>
        <div class="row multi-email align-items-end">
            <%= render 'common_pages/emails/email_field', f: f, email: email  %>
            <%= render 'common_pages/delete_multiple_relation', remove_path: delete_email_path(model_id: email.object.id), object: email.object, object_text: 'email'  %>
        </div>
        <% end %>

    </div>

    <!-- Botão de adicionar -->
    <div class="col-12">
        <%= render 'common_pages/add_multiple_relation', object_text: 'email' %>
    </div>
</div>
<!-- Fim e-mails cadastro múltiplo -->