<%
  # Aqui se deve passar o rating como valor numérico
  # As estrelinhas são preenchidas de acordo
  if rating.nil? || rating.blank?
    rating = 0
  end
%>

<% (1..5).each do |number| %>
    <i class="bi bi-star<%= rating >= number ? '-fill' : '' %> text-primary"></i>
<% end %>

